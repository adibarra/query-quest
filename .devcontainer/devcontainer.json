/**
 * @author: adibarra (Alec Ibarra)
 * @description: Configuration file for the development container
 */

{
  "name": "query-quest",
  "image": "mcr.microsoft.com/devcontainers/base:alpine",
  "workspaceFolder": "/workspaces/query-quest",
  "features": {
    "ghcr.io/adibarra/devcontainer-features/alpine-nvm:1": {},
    "./local-features/python": {
      /* From: https://github.com/devcontainers/features/pull/1015 */
      "installTools": false
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ahmadalli.vscode-nginx-conf",
        "antfu.goto-alias",
        "antfu.iconify",
        "antfu.unocss",
        "charliermarsh.ruff",
        "christian-kohler.path-intellisense",
        "csstools.postcss",
        "dbaeumer.vscode-eslint",
        "ecmel.vscode-html-css",
        "editorconfig.editorconfig",
        "github.vscode-github-actions",
        "github.vscode-pull-request-github",
        "johnsoncodehk.vscode-tsconfig-helper",
        "ms-azuretools.vscode-docker",
        "streetsidesoftware.code-spell-checker",
        "vue.volar"
      ]
    }
  },
  "portsAttributes": {
    "3000": { "label": "Production" },
    "3333": { "label": "Development - Frontend" },
    "3332": { "label": "Development - Backend" }
  },
  "postCreateCommand": ".devcontainer/postCreateCommand.sh",
  "postStartCommand": ".devcontainer/postStartCommand.sh"
}
